# SkyNav Frontend Environment Variables
# Copy this file to .env.local for local development
# .env.local is git-ignored and should never be committed

# =============================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# =============================================================================

# API Endpoint
# For local development, point to local Functions runtime
NEXT_PUBLIC_API_URL=http://localhost:7071/api

# Azure AD B2C (Development Tenant)
NEXT_PUBLIC_B2C_TENANT_NAME=your-dev-tenant-name
NEXT_PUBLIC_B2C_CLIENT_ID=your-dev-client-id
NEXT_PUBLIC_B2C_POLICY_NAME=B2C_1_signupsignin
NEXT_PUBLIC_B2C_PASSWORD_RESET_POLICY=B2C_1_passwordreset
NEXT_PUBLIC_B2C_REDIRECT_URI=http://localhost:3000/api/auth/callback/azure-ad-b2c

# Azure Maps
NEXT_PUBLIC_AZURE_MAPS_SUBSCRIPTION_KEY=your-azure-maps-subscription-key

# Application Insights (optional for local dev)
NEXT_PUBLIC_APPINSIGHTS_INSTRUMENTATIONKEY=

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# PRODUCTION/CLOUD CONFIGURATION
# =============================================================================
# For production deployment, set these in Azure Static Web App configuration:
#
# NEXT_PUBLIC_API_URL=https://func-skynav-prod.azurewebsites.net/api
# NEXT_PUBLIC_B2C_TENANT_NAME=your-prod-tenant-name
# NEXT_PUBLIC_B2C_CLIENT_ID=your-prod-client-id
# NEXT_PUBLIC_B2C_POLICY_NAME=B2C_1_signupsignin
# NEXT_PUBLIC_B2C_PASSWORD_RESET_POLICY=B2C_1_passwordreset
# NEXT_PUBLIC_B2C_REDIRECT_URI=https://stapp-skynav-prod.azurestaticapps.net/api/auth/callback
# NEXT_PUBLIC_AZURE_MAPS_SUBSCRIPTION_KEY=your-prod-azure-maps-key
# NEXT_PUBLIC_APPINSIGHTS_INSTRUMENTATIONKEY=your-prod-instrumentation-key
# NEXT_PUBLIC_ENVIRONMENT=production
